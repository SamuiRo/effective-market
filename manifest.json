{
  "manifest_version": 3,
  "name": "Vapor",
  "version": "2.0.0",
  "description": "Steam Market helper extension",
  "permissions": ["activeTab"],
  "host_permissions": ["https://steamcommunity.com/market/listings/*"],
  "background": {
    "service_worker": "./background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://steamcommunity.com/market/listings/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "128": "icons/icon.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["*.js"],
      "matches": ["*://steamcommunity.com/*"]
    }
  ]
}
